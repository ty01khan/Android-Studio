<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0ad3f3"
    android:padding="10dp"
    tools:context=".inside_room_button">
    <TextView
        android:id="@+id/inside_room"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Room Name"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_below="@+id/inside_room"
        android:id="@+id/Status"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Status : " />
    <TextView
        android:layout_below="@+id/inside_room"
        android:id="@+id/current_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Status"
        android:text="Locked"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="25dp"
        android:gravity="left"/>

    <TextView
        android:layout_below="@+id/current_status"
        android:id="@+id/lastAccessed"
        android:textSize="25dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Last/Current User : " />

    <Switch
        android:id="@+id/simpleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/lastAccessed"
        android:text="Options (Lock/Unlock)"
        android:textSize="25dp" />


</RelativeLayout>
